<Window x:Class="GlDrive.UI.WizardWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="GlDrive Setup Wizard" Width="550" Height="420"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Step indicator -->
        <TextBlock Grid.Row="0" x:Name="StepIndicator" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,12"/>

        <!-- Step content -->
        <ContentControl Grid.Row="1" x:Name="StepContent"/>

        <!-- Navigation -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
            <Button x:Name="BackButton" Content="Back" Click="Back_Click" Padding="20,6" Margin="0,0,8,0"
                    Style="{StaticResource SecondaryButton}"/>
            <Button x:Name="NextButton" Content="Next" Click="Next_Click" Padding="20,6"
                    Style="{StaticResource PrimaryButton}"/>
        </StackPanel>
    </Grid>
</Window>
